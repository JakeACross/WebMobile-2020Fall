<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".StorageActivity">


<EditText
    android:id="@+id/id_txt_mycontent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:ems="10"
    android:gravity="start"
    android:hint="Enter text here..."
    android:inputType="textMultiLine"
    android:textAlignment="viewStart"
    android:textSize="24sp" />

<Button
    android:id="@+id/id_btn_save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/id_txt_mycontent"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="38dp"
    android:onClick="saveToFile"
    android:backgroundTint="#27D928"
    android:text="save" />

<Button
    android:id="@+id/id_btn_display"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/id_btn_save"
    android:layout_alignStart="@+id/id_btn_save"
    android:layout_alignLeft="@+id/id_btn_save"
    android:layout_marginTop="200dp"
    android:onClick="retrieveFromFile"
    android:backgroundTint="#27D928"
    android:text="open" />

<EditText
    android:id="@+id/id_txt_display"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/id_btn_display"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginTop="65dp"
    android:ems="10"
    android:textSize="24sp"
    android:hint="Output would be here..."
    android:textColor="#D30000"
    android:inputType="textMultiLine"/>

<ImageView
    android:id="@+id/imageView4"
    android:layout_width="132dp"
    android:layout_height="162dp"
    android:layout_below="@+id/id_btn_save"
    android:layout_marginLeft="139dp"
    android:layout_marginTop="24dp"
    android:layout_marginRight="139dp"
    app:srcCompat="@drawable/computer_folder" />
</RelativeLayout>
